.InvitationInfoBlock {
    width: 100%;
    background-color: #fff;
    padding:15px;
    box-sizing: border-box;
    margin-bottom: 10px;
}

.InvitationInfoBlock .top {
    width: 100%;
    padding-bottom: 12px;
    box-sizing: border-box;
    border-bottom: 1px dashed #d0d0d0;
    display: flex;
}

.InvitationInfoBlock .top .preview {
    width: 42px;
    height: 42px;
    border-radius: 50%;
    margin-right: 18px;
}
.InvitationInfoBlock .top .info {
    vertical-align: top;
    width: 80%;
    flex: 1;
}
.InvitationInfoBlock .top .info .person {
    width: 100%;
    margin-bottom: 4px;
}
.info .person .name {
    font-size: 14px;
    font-weight: bolder;
    display: inline-block;
    color: #2d2d2d;
    vertical-align: middle;
    margin-right: 10px;
}
.info .person .food {
    display: inline-block;
    font-size: 11px;
    color: #4a4a4a;
    vertical-align: middle;
}
.info .mono {
    font-size: 13px;
    color: #353535;
    width: 90%;
    line-height: 18px;
}